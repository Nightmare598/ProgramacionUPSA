#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
int intercalada (int n);
void main(){
	int n, s=0;
	cout<<"Ingrese el limite de la serie: "<<endl;
	cin>>n;
	s=intercalada(n);
	cout<<"El resultado de la suma intercalada de la serie es: "<<s<<endl;
	getch();
}

int intercalada (int n){
	int s=0;
	for (int i=0; i<=n; i++){
		if (i%2==0)
			s=s-i;
		else
			s=s+i;
	}
	return s;
}
