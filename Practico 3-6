#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;
float serie (float n, float x);
void main(){
	float n, x, p=0;
	cout<<"Ingrese el numero base de la serie: "<<endl;
	cin>>x;
	cout<<"Ingrese el numero limite de la potencia de la serie: "<<endl;
	cin>>n;
	p=serie(n, x);
	cout<<"El resultado del producto de la serie es: "<<p<<endl;
	getch();
}

float serie (float n, float x){
	float s=0;
	for (int i=1; i<=n; i++){
		s=s+pow(x,i);
	}
	return s;
}
