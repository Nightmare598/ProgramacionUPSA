#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
int serie (int n);
void main(){
	int n, s=0;
	cout<<"Ingrese el limite de la serie: "<<endl;
	cin>>n;
	s=serie(n);
	cout<<"El resultado de la suma de la serie de impares es: "<<s<<endl;
	getch();
}

int serie (int n){
	int num, impares=0;
	for (int i=1; i<=n; i++){
		if (i%2!=0){
		impares=impares+i;
		}
	}
		return impares;
	}

